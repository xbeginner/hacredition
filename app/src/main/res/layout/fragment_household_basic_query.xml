<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                  <com.hacredition.xph.hacredition.utils.LineGridView
                      android:id="@+id/household_basic_gridview"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"></com.hacredition.xph.hacredition.utils.LineGridView>

            </HorizontalScrollView>

      </ScrollView>

      <TextView
          android:id="@+id/empty_data_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawablePadding="@dimen/item_margin"
          android:drawableTop="@drawable/data_empty"
          android:gravity="center"
          android:text="@string/no_data"
          android:textColor="@color/secondary_text"
          android:textSize="@dimen/big_medium"
          android:visibility="gone"
          />

</FrameLayout>