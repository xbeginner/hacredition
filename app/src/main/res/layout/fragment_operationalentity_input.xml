<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/operationalentity_idcard_editview"
                android:hint="证件号"
                style="@style/materialEditTextStyle"  />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/operationalentity_name_editview"
                android:hint="姓名"
                style="@style/materialEditTextStyle"  />




            <Spinner android:id="@+id/operationalentity_type_spinner"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content"></Spinner>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/operationalentity_xiangmu_edit"
                android:hint="经营项目"
                style="@style/materialEditTextStyle" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/operationalentity_guimo_edit"
                android:hint="经营规模"
                style="@style/materialEditTextStyle" />


        </LinearLayout>

        <Button
            android:id="@+id/operationalentity_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@color/colorPrimary"
            android:layout_weight="0.2"/>


    </LinearLayout>




</ScrollView>
