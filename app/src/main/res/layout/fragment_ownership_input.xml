<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_idcard_editview"
                android:hint="使用人证件号"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_name_editview"
                android:hint="使用人姓名"
                style="@style/materialEditTextStyle"/>

            <Spinner android:id="@+id/ownership_type_spinner"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content"></Spinner>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_number_edit"
                android:hint="权证编号"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_eara_edit"
                android:hint="使用权面积(平方米)"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_qixian_edit"
                android:hint="使用期限(年份)"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ownership_value_edit"
                android:hint="评估价格(万元)"
                style="@style/materialEditTextStyle"/>

        </LinearLayout>

        <Button
            android:id="@+id/ownership_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@color/colorPrimary"
            android:layout_weight="0.2"/>


    </LinearLayout>




</ScrollView>
