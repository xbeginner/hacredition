<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/fiscalspend_idcard_editview"
                android:hint="证件号"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="410702983789293868"/>

            <EditText
                android:id="@+id/fiscalspend_name_editview"
                android:hint="姓名"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="张三"/>

            <EditText
                android:id="@+id/fiscalspend_time_edit"
                android:hint="参加工作时间"
                android:maxLines="1"
                android:padding="16dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2017-01-01"/>

            <EditText
                android:id="@+id/fiscalspend_org_edit"
                android:hint="单位名称"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="人民银行"/>

            <EditText
                android:id="@+id/fiscalspend_zhiwu_edit"
                android:hint="职务"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="职务"/>

            <Spinner android:id="@+id/fiscalspend_jibie_spinner"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content"></Spinner>

            <Spinner android:id="@+id/fiscalspend_leixing_spinner"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content"></Spinner>



            <EditText
                android:id="@+id/fiscalspend_location_edit"
                android:hint="单位地址"
                android:maxLines="2"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="100"/>

        </LinearLayout>

        <Button
            android:id="@+id/fiscalspend_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@color/colorPrimary"
            android:layout_weight="0.2"/>


    </LinearLayout>




</ScrollView>
