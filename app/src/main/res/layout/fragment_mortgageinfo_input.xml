<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/mortgage_idcard_editview"
                android:hint="抵押人证件号"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="410702983789293868"/>

            <EditText
                android:id="@+id/mortgage_name_editview"
                android:hint="抵押人姓名"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="张三"/>


            <EditText
                android:id="@+id/mortgage_diyawu_editview"
                android:hint="抵押物"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="张三"/>

            <EditText
                android:id="@+id/mortgage_jine_edit"
                android:hint="抵押金额(万元)"
                android:maxLines="1"
                android:padding="16dp"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="100"/>



            <EditText
                android:id="@+id/mortgage_jiezhiriqi_edit"
                android:hint="截止日期"
                android:maxLines="1"
                android:padding="16dp"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2017-01-01"/>



        </LinearLayout>

        <Button
            android:id="@+id/mortgage_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@color/colorPrimary"
            android:layout_weight="0.2"/>


    </LinearLayout>




</ScrollView>
