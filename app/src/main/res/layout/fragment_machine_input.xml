<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_idcard_editview"
                android:hint="所有人证件号"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_name_editview"
                android:hint="所有人姓名"
                style="@style/materialEditTextStyle"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_type_editview"
                android:hint="类型"
                style="@style/materialEditTextStyle"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_time_edit"
                android:hint="购买时间"
                style="@style/materialEditTextStyle"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_value_edit"
                android:hint="购进价格(万元)"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_currentValue_edit"
                android:hint="现在价格(万元)"
                style="@style/materialEditTextStyle"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/machine_number_editview"
                android:hint="有效证号"
                style="@style/materialEditTextStyle"
                />


            <ImageView
                android:id="@+id/machine_pic_img"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/machine_pic_button"
                android:text="@string/add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/machine_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@color/colorPrimary"
            android:layout_weight="0.2"/>


    </LinearLayout>


</ScrollView>
