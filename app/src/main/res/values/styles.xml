<resources>



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="materialEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="met_baseColor">@color/black</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_errorColor">@color/red</item>
        <item name="met_floatingLabel">highlight</item>
    </style>

    <!--日间主题-->
    <style name="DayTheme" parent="AppTheme.NoActionBar">
        <item name="myTheme">day</item>
        <!--ActionBar背景  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbar_Menu_Text_Color">@color/toolbar_Menu_Text_Color_Day</item>
        <item name="toolbar_Text_Color">@color/toolbar_Text_Color_Day</item>
        <!--页面背景-->
        <item name="android:windowBackground">@color/background_Day</item>
        <!--主页item背景色-->
        <item name="main_item_background">@color/main_item_background_Day</item>
        <!--三种文字颜色-->
        <item name="textColorFirst">@color/textColorFirst_Day</item>
        <item name="textColorSecond">@color/textColorSecond_Day</item>
        <item name="textColorThird">@color/textColorThird_Day</item>

    </style>

    <!--夜晚主题-->
    <style name="NightTheme" parent="AppTheme.NoActionBar">
        <item name="myTheme">night</item>
        <!--ActionBar背景  -->
        <item name="colorPrimary">@color/topbar_Background_Night</item>
        <item name="colorPrimaryDark">@color/topbar_Background_Night</item>
        <item name="colorAccent">@color/background_Night</item>
        <item name="toolbar_Menu_Text_Color">@color/toolbar_Menu_Text_Color_Night</item>
        <item name="toolbar_Text_Color">@color/toolbar_Text_Color_Night</item>
        <!--页面背景-->
        <item name="android:windowBackground">@color/background_Night</item>
        <!--主页item背景色-->
        <item name="main_item_background">@color/main_item_background_Night</item>
        <!--三种文字颜色-->
        <item name="textColorFirst">@color/textColorFirst_Night</item>
        <item name="textColorSecond">@color/textColorSecond_Night</item>
        <item name="textColorThird">@color/textColorThird_Night</item>


    </style>


    <style name="MyToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <!--Toolbar标题颜色-->
        <item name="titleTextColor">?attr/toolbar_Text_Color</item>
        <!--ActionBar默认按钮的颜色-->
        <item name="colorControlNormal">?attr/toolbar_Text_Color</item>
        <!--弹出菜单的样式-->
        <item name="popupTheme">@style/MyToolbarPopupTheme</item>
        <!--子控件相对父控件位置-->
        <item name="android:gravity">center</item>

        <!--NavigationButton-->
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>

    </style>


    <style name="MyToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--Menu文字颜色-->
        <item name="android:textColorPrimary">?attr/toolbar_Menu_Text_Color</item>
        <!--子控件相对父控件位置-->
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
