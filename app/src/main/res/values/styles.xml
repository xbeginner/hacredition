<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--页面背景-->
        <item name="android:windowBackground">@color/background_Day</item>
        <!--主页item背景色-->
        <item name="main_item_background">@color/main_item_background_Day</item>
        <!--三种文字颜色-->
        <item name="textColorFirst">@color/textColorFirst_Day</item>
        <item name="textColorSecond">@color/textColorSecond_Day</item>
        <item name="textColorThird">@color/textColorThird_Day</item>

        <item name="android:screenOrientation">portrait</item>

    </style>

    <style name="StatusBarTranslucentTheme" parent="AppTheme">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="materialEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="met_baseColor">@color/black</item>
        <item name="met_primaryColor">@color/colorPrimary</item>
        <item name="met_errorColor">@color/red</item>
        <item name="met_floatingLabel">highlight</item>

    </style>

</resources>
